                                    <a href="/update/<%= data[i].id %>" class="btn btn-info">Actualizar</a>                                    
                                </td>
                            </tr>
                        <%}%>

                    <%}%>
             
                </tbody>            
            </table>
        </div>

        <div class="col-md-5">
          
            <div class="card">
                <div class="card-body">
                    <form action="/sign" method="post">  
                        <button type="submit" class="btn btn-primary btn-block">
                            Nuevo Registro
                        </button>
                    </form>
                </div>
            </div>
            
        </div>
        
    </div>
</div>

